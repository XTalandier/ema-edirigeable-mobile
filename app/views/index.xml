<Alloy>
	<Window class="container">
		
		<View class="menu">
			<Button class="bouton_menu" id="btnEnreg" title="Enregistrer" onClick="btnRecord_click" />		
			<Button class="bouton_menu" id="btnFinish" title="Arrêter" onClick="stopRecord" />
			<Button class="bouton_menu" id="btnOptions" title="Configuration" onClick="config" />
			<Button class="bouton_menu" id="btnTrajets" title="Trajets" onClick="showTrajets" />
<!--
			<TextField id="txtIP"/>
			<Button id="btnOptions" title="Configuration" onClick="config" />
			<Button id="btnEnreg" title="Enregistrer" onClick="save" />
-->
		</View>


		
		<!-- Le pavé directionnel -->
		<Require type="widget" src="direction" id="dir"/>
		
		<!-- La matrice -->
		<Require type="widget" src="fr.logger" id="logger"/>
		
		<!-- LE GRAPH -->
		<WebView id="graph" url="/graph/chart.html"></WebView>
		
		<!-- LA MAP -->
		<View id="mapview" ns="Ti.Map"
            animate="true" regionFit="true" userLocation="true"
            mapType="Ti.Map.STANDARD_TYPE" >

            <Annotation id="eDirigeable"
              latitude="37.390749" longitude="-122.081651"
              title="E-Diregeable" subtitle=""
              pincolor="Titanium.Map.ANNOTATION_RED"
              leftButton="/images/appcelerator_small.png"
              myid="1"/>

            <!-- Place other child views here, such as an ImageView to add an overlay. -->

        </View>
    </Window>
</Alloy>